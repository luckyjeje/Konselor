<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    android:background="@color/skyblue"
    tools:context=".sign.info">


    <Button
        android:id="@+id/button_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="130dp"
        android:background="@color/flowerblue"
        android:fontFamily="@font/comickbook_caps"
        android:text="Lanjut" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="307dp"
        android:layout_height="324dp"
        android:layout_centerHorizontal="true"
        android:paddingTop="100dp"
        app:srcCompat="@drawable/gambar_info" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="377dp"
        android:layout_height="320dp"
        android:layout_centerInParent="true"
        android:fontFamily="@font/comickbook_simple"
        android:lineSpacingMultiplier="1.5"
        android:paddingTop="130dp"
        android:paddingBottom="10dp"
        android:text="ShareCare adalah aplikasi yang peduli tentang kesehatan mental pengguna, digunakan untuk mencurahkan hati para pengguna ke konselor terpecaya"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="345dp"
        android:layout_height="388dp"
        android:layout_centerInParent="true"
        android:fontFamily="@font/comickbook_simple"
        android:lineSpacingMultiplier="1.5"
        android:paddingTop="310dp"
        android:text="Jangan Di Pendem Ya !"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>