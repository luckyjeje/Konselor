<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="8dp"
    android:backgroundTint="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            tools:text="Nama Psikiater"
            android:textColor="@color/flowerblue"
            android:fontFamily="@font/comickbook_caps"/>

        <TextView
            android:id="@+id/tv_item_jadwal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_name"
            android:layout_marginLeft="16dp"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            tools:text="jadwal"
            android:textColor="@color/flowerblue"
            android:fontFamily="@font/comickbook_simple"/>

        <View
            android:id="@+id/hr_top"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#888888"
            android:layout_below="@id/tv_item_jadwal"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hr_top"
            android:layout_marginTop="4dp"
            android:textAlignment="center"
            android:layout_alignTop="@id/hr_top"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Alamat"
            android:maxLines="2"
            android:textColor="@color/flowerblue"
            android:fontFamily="@font/comickbook_caps"/>

        <View
            android:id="@+id/hr_bottom"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#888888"
            android:layout_below="@id/alamat"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tv_item_alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_jadwal"
            android:layout_marginTop="8dp"
            android:layout_alignTop="@id/hr_bottom"
            android:textAlignment="center"
            android:ellipsize="end"
            android:maxLines="5"
            tools:text="Alamat"
            android:textColor="@color/flowerblue"
            android:fontFamily="@font/comickbook_simple"/>

        <Button
            android:id="@+id/btn_lokasi"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_alamat"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="8px"
            android:background="@drawable/ic_baseline_location_on_24"
            />

        <Button
            android:id="@+id/btn_situs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_alamat"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8px"
            android:text="Kunjungi Kami" />

        <Button
            android:id="@+id/btn_hubungi"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_alamat"
            android:layout_marginTop="8px"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_baseline_call_24"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>